<h2>Sign up</h2>
<div class="signup_form1">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,  placeholder: "Email Address"%>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password",  placeholder: "Password (minimum 6 Characters)" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",  placeholder: "Confirm Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" ,id: 'plant_submit_button'  %>
  </div>
<% end %>
</div>

<%= render "devise/shared/links" %>
