<h1>Props for swapping!</h1>

<section class="showing-all-plants">
        <% @plants.each do |plant| %>
            <%= link_to(plant) do %>
                <div class="individual-plant-show-all">
                    <h2><%= plant.name %></h2>
                    <p><%= plant.plant_type %></p>
                    <p><%= number_to_currency(plant.price / 100.0) %></p>
                </div>
            <% end %>
        <% end %>
    </section>


  

  <div class="sign_out">
  <% if user_signed_in? %> 
  <%= link_to "logout", destroy_user_session_path, method: :delete %>
  <% else %>
  <%= link_to "Login", new_user_session_path %>
  <% end %>
</div>

