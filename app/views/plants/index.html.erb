<h1>Props for swapping!</h1>

<section class="showing-all-plants">
        <% @plants.each do |plant| %>
            <%= link_to(plant) do %>
                <div class="individual-plant-show-all">
                <div class="plant-show-pic">
  <%= image_tag plant.picture if plant.picture.attached? %>
  </div>
                    <h3><%= plant.name %></h3>
                    <p><%= number_to_currency(plant.price / 100.0) %></p>
                </div>
            <% end %>
        <% end %>
    </section>


  

  <div class="sign_out">
  <% if user_signed_in? %> 
  <%= link_to "logout", destroy_user_session_path, method: :delete %>
  <% else %>
  <%= link_to "Login", new_user_session_path %>
  <% end %>
</div>

