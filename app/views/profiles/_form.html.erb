<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="plant-form">
  <div class="field">
    <%= form.text_field :first_name,  placeholder: "First name" %>
  </div>

  <div class="field">
    <%= form.text_field :last_name,  placeholder: "Last name" %>
  </div>

  <div class="field">
    <%= form.text_field :address,  placeholder: "Address" %>
  </div>

  <div class="field">
    <%= form.text_field :suburb,  placeholder: "Suburb" %>
  </div>

  <div class="field">
    <%= form.text_field :state ,  placeholder: "State"%>
    <%= form.number_field :post_code,  placeholder: "Post Code" %>
  </div>
  <div>
  <%= form.label :picture %> <%= form.file_field :picture, accept:
  'image/png,image/gif,image/jpeg,image/jpg' %>
</div>

  <div class="actions">
    <%= form.submit id: 'plant_submit_button' %>
  </div>
<% end %>
